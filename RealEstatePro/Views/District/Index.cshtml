@model IEnumerable<RealEstatePro.Models.District>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container">

        <div class="row">
            <!--Filtreleme-->
            @Html.Action("PartialFilter", "Home")




            <br />
            <div class="col-md-9">
                <div class="thumbnail" style="width:845px">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"> <a href="/Admin/Index"> Admin Panel</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Districts List</li>
                        </ol>
                    </nav>

                    <a class="btn btn-primary btn-block" href="@Url.Action("Create")"> Add District</a>
                    <table class="table table-striped">
                        <tr>
                            <th>
                                City
                            </th>
                            <th>
                                District
                            </th>


                            <th class="text-info">
                                Operations
                            </th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.City.CityName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DistrictName)
                                </td>

                                <td>
                                    <a class="btn btn-primary" href="@Url.Action("Edit", new { id = item.DistrictId })"><i class="fa fa-edit"></i> Edit</a>
                                    <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.DistrictId })">  <i class="fa fa-trash"></i> Delete</a>
                                    <a class="btn btn-success" href="@Url.Action("Details", new { id = item.DistrictId })"> <i class="fa fa-info-circle"></i> Details</a>
                                </td>
                            </tr>
                        }

                    </table>

                </div>
            </div>
        </div>

    </div>




