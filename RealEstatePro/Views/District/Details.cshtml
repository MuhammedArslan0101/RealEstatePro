        </div>




        <br />
        <div class="col-md-9">
            <div class="thumbnail" style="width:845px">


                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"> <a href="/Admin/Index"> Admin Panel</a></li>,,
                        <li class="breadcrumb-item"> <a href="/District/Index"> Districts List</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Districts Details</li>
                    </ol>
                </nav>

                <hr />

                <dl class="dl-horizontal">
                    <dt>
                        @*@Html.DisplayNameFor(model => model.City.CityName)*@
                        City Name :
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.City.CityName)
                    </dd>
                    <hr />
                    <dt>
                        @*@Html.DisplayNameFor(model => model.DistrictName)*@
                        District Name : 
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.DistrictName)
                    </dd>

                </dl>
                <hr />
                <a style="margin-left:50px; margin-bottom:10px;" class="btn btn-primary" href="@Url.Action("Edit", new { id = Model.DistrictId })">Edit</a>  ||
                <a style="margin-bottom: 10px;" class="btn btn-danger" href="@Url.Action("Delete", new { id = Model.DistrictId })">Delete</a>

            </div>

        </div>

    </div>

</div>

