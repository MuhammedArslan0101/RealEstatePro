@model RealEstatePro.Models.District

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row">
        <!--Filtreleme-->
        <div class="col-md-3">
            <br />
            <!--Filtreleme-->
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label">En Az </label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" palceholder="En Az(fiyat)">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label">En Cok </label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" palceholder="En Cok(fiyat)">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label">Şehir </label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" palceholder="Şehir">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label">Semt </label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" palceholder="Semt">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label">Mahalla </label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" palceholder="Mahalla">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label">Durum </label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" palceholder="Durum">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label">Tip </label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" palceholder="Tip">
                    </div>
                </div>


                <div class="form-group">
                    <label for="" class="col-sm-4 control-label"> </label>
                    <div class="col-sm-6">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i> Filitreleme</button>
                    </div>
                </div>
            </form>
        </div>




        <br />
        <div class="col-md-9">
            <div class="thumbnail" style="width:845px">


                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"> <a href="/Admin/Index"> Admin Panel</a></li>
                        <li class="breadcrumb-item"> <a href="/District/Index"> District List</a></li>

                        <li class="breadcrumb-item active" aria-current="page">Edit</li>
                    </ol>
                </nav>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.DistrictId)

                <div class="form-group">
                    @Html.LabelFor(model => model.DistrictName,"District Name", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.DistrictName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DistrictName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CityId, "City Name", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.DropDownList("CityId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CityId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-success" />

                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-warning" })

                        @Html.ActionLink("Go To City List","Index" , "City", null , new { @class = "btn btn-warning" })

                    </div>
                </div>
            </div>
                }

            </div>

        </div>

    </div>

</div>


