@model RealEstatePro.Models.Neighborhood

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container">

        <div class="row">
            <!--Filtreleme-->
            @Html.Action("PartialFilter", "Home")

            <br />
            <div class="col-md-9">
                <div class="thumbnail" style="width:845px">


                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"> <a href="/Admin/Index"> Admin Panel</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Delete Neighborhood</li>
                        </ol>
                    </nav>
                    <h3 style="padding-left:20px">Are you sure you want to delete this?</h3>
                    <hr />
                    <div>
                        <dl class="dl-horizontal">
                            <dt>
                                District Name
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.District.DistrictName)
                            </dd>
                            <hr />
                            <dt>
                                Neighborhood Name :
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.NeighborhoodName)
                            </dd>

                        </dl>
                        <hr />
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div style="padding-left:30px; padding-bottom:30px;" class="form-actions no-color">
                                <input type="submit" value="Delete" class="btn btn-danger" /> |
                                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-warning" })

                            </div>
                        }
                    </div>


                </div>

            </div>

        </div>

    </div>
