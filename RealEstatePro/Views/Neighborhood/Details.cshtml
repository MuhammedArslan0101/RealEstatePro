@model RealEstatePro.Models.Neighborhood

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container">

        <div class="row">
            <!--Filtreleme-->
            @Html.Action("PartialFilter", "Home")




            <br />
            <div class="col-md-9">
                <div class="thumbnail" style="width:845px">


                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"> <a href="/Admin/Index"> Admin Panel</a></li>,,
                            <li class="breadcrumb-item"> <a href="/Neighborhood/Index"> Neighborhood List</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Neighborhood Details</li>
                        </ol>
                    </nav>

                    <hr />

                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.District.DistrictName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.District.DistrictName)
                        </dd>
                        <hr />
                        <dt>
                            @Html.DisplayNameFor(model => model.NeighborhoodName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.NeighborhoodName)
                        </dd>

                    </dl>
                    <hr />
                    <a style="margin-left:50px; margin-bottom:10px;" class="btn btn-primary" href="@Url.Action("Edit", new { id = Model.NeighborhoodId })">Edit</a>  ||
                    <a style="margin-bottom: 10px;" class="btn btn-danger" href="@Url.Action("Delete", new { id = Model.NeighborhoodId })">Delete</a>

                </div>

            </div>

        </div>

    </div>

