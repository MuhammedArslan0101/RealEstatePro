@model IEnumerable<RealEstatePro.Models.Type>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">

    <div class="row">
        <!--Filtreleme-->
        <div class="col-md-3">
            <br />
            <!--Filtreleme-->
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label">En Az </label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" palceholder="En Az(fiyat)">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label">En Cok </label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" palceholder="En Cok(fiyat)">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label">Şehir </label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" palceholder="Şehir">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label">Semt </label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" palceholder="Semt">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label">Mahalla </label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" palceholder="Mahalla">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label">Durum </label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" palceholder="Durum">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label">Tip </label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" palceholder="Tip">
                    </div>
                </div>


                <div class="form-group">
                    <label for="" class="col-sm-4 control-label"> </label>
                    <div class="col-sm-6">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i> Filitreleme</button>
                    </div>
                </div>
            </form>
        </div>




        <br />
        <div class="col-md-9">
            <div class="thumbnail" style="width:845px">


                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"> <a href="/Admin/Index"> Admin Panel</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Types List</li>
                    </ol>
                </nav>
                <a class="btn btn-primary btn-block" href="@Url.Action("Create")"> Add Type </a>
                <table class="table table-striped">
                    <tr>
                        <th>
                            Status Name
                        </th>
                        <th class="text-info">
                            Type Name
                        </th>
                        <th class="text-info">
                            Operations
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status.StatusName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TypeName)
                    </td>

                    <td>
                        <a class="btn btn-primary" href="@Url.Action("Edit", new { id = item.TypeId })"><i class="fa fa-edit"></i> Edit</a>
                        <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.TypeId })">  <i class="fa fa-trash"></i> Delete</a>
                        <a class="btn btn-success" href="@Url.Action("Details", new { id = item.TypeId })"> <i class="fa fa-info-circle"></i> Details</a>
                    </td>
                </tr>
                    }

                </table>

            </div>

        </div>

    </div>

</div>
