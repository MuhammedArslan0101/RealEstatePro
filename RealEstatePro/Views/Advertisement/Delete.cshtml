@model RealEstatePro.Models.Advertisement

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row">
        <!--Filtreleme-->
        @Html.Action("PartialFilter", "Home")

        <br />
        <div class="col-md-9">
            <div class="thumbnail" style="width:845px">


                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"> <a href="/Admin/Index"> Admin Panel</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Delete Adv</li>
                    </ol>
                </nav>
                <h3>Are you sure you want to delete this?</h3>
                <hr />
                <div>
                    <dl class="dl-horizontal">
                        <dt>
                            User Name :
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.UserName)
                        </dd>
                        <dt>
                            NeighborhoodName :
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.NeighborhoodId)
                        </dd>

                        <dt>
                            Type Name :
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TypeId)
                        </dd>

                        <dt>
                            Description :
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Description)
                        </dd>

                        <dt>
                            Price :
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Price)
                        </dd>

                        <dt>
                            Num Of Room :
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.NumOfRoom)
                        </dd>

                        <dt>
                            Num Of Bath
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.NumOfBath)
                        </dd>

                        <dt>
                            Credit :
                        </dt>

                        <dd>
                            @if (Model.Credit == true)
                            {
                                <label class="labale label-success">Yes</label>
                            }
                            else
                            {
                                <label class="labale label-danger">No</label>
                            }
                        </dd>

                        <dt>
                            Area :
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Area)
                        </dd>

                        <dt>
                            Floor :
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Floor)
                        </dd>

                        <dt>
                            Feature :
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Feature)
                        </dd>

                        <dt>
                            Telephone :
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Telephone)
                        </dd>

                        <dt>
                            Addres :
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Addres)
                        </dd>



                        <dt>
                            City Id :
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.CityId)
                        </dd>

                        <dt>
                            District Id
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.DistrictId)
                        </dd>

                        <dt>
                            Status Id
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.StatusId)
                        </dd>

                    </dl>
                    <hr />
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div style="padding-left:30px; padding-bottom:30px;" class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-danger" /> |
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-warning" })

                        </div>
                    }
                </div>


            </div>

        </div>

    </div>

</div>


