@model IEnumerable<RealEstatePro.Models.Advertisement>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">

    <div class="row">
        <!--Filtreleme-->
        @Html.Action("PartialFilter", "Home")




        <br />
        <div class="col-md-9">
            <div class="thumbnail" style="width:845px">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"> <a href="/Home/Index"> Home </a></li>
                        <li class="breadcrumb-item active" aria-current="page">Advertisme List</li>
                    </ol>
                </nav>

                <a class="btn btn-primary btn-block" href="@Url.Action("Create")"> Add AD</a>
                <br />
                <table class="table table-striped">

                    <tr>
                        <th>
                            Status
                        </th>
                        <th>
                            User Name
                        </th>

                        <th>
                            City Name
                        </th>

                        <th>
                            District Name
                        </th>
                        <th>
                            Neghod Name
                        </th>
                        <th>
                            Type
                        </th>
                        @*<th>
                            Price
                        </th>*@
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Type.Status.StatusName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Neighborhood.District.City.CityName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Neighborhood.District.DistrictName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Neighborhood.NeighborhoodName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Type.TypeName)
                            </td>

                            @*<td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>*@



                            <td>
                                <form class="btn btn-sm">
                                    <a class="btn btn-success" href="@Url.Action("Images", new { id = item.AdvId })"><i class="fa fa-edit"></i>Add İmg</a>
                                    <a class="btn btn-primary " href="@Url.Action("Edit", new { id = item.AdvId })"><i class="fa fa-edit"></i> Edit</a>
                                    <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.AdvId })">  <i class="fa fa-trash"></i> Delete</a>
                                    <a class="btn btn-success " href="@Url.Action("Details", new { id = item.AdvId })"> <i class="fa fa-info-circle"></i> Details</a>
                                </form>
                            </td>

                        </tr>
                    }

                </table>


            </div>
        </div>
    </div>

</div>
