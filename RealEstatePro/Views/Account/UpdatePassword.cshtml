@model RealEstatePro.Models.UpdatePassword

@{
    ViewBag.Title = "UpdatePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">


    <div class="row">
        <!--Filtreleme-->
        <div class="col-md-3">
            <br />
            <!--Filtreleme-->
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label">En Az </label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" palceholder="En Az(fiyat)">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label">En Cok </label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" palceholder="En Cok(fiyat)">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label">Şehir </label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" palceholder="Şehir">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label">Semt </label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" palceholder="Semt">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label">Mahalla </label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" palceholder="Mahalla">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label">Durum </label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" palceholder="Durum">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label">Tip </label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" palceholder="Tip">
                    </div>
                </div>


                <div class="form-group">
                    <label for="" class="col-sm-4 control-label"> </label>
                    <div class="col-sm-6">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i> Filitreleme</button>
                    </div>
                </div>
            </form>
        </div>
        <br />







        <br />
        <div class="col-md-9">
            <div class="thumbnail" style="width:845px">


                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Update Password</li>
                    </ol>
                </nav>


                @using (Html.BeginForm("UpdatePassword", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                 

                    <!--Edit Profile-->

                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Old Password </label>
                        <div class="col-sm-4">
                            @Html.PasswordFor(m => m.OldPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">New Password </label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Conf Password </label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.ConNewPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.ConNewPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-sm-10 col-sm-offset-2">
                            <button type="submit" class="btn btn-primary"><i class="fa fa-edit"></i> Ok </button>
                        </div>
                    </div>


                }
            </div>

        </div>



    </div>

    </div>
